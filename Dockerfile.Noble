ARG ffmpeg_ver=7.1
ARG libvmaf_ver=3.0.0
ARG libopenjpeg_ver=2.5.2
ARG libflite_ver=2.2
ARG libaribcaption_ver=1.1.1

FROM nvidia/cuda:12.6.1-cudnn-devel-ubuntu24.04 AS builder

RUN apt update -y

RUN apt install -y curl build-essential automake libtool cmake meson ninja-build nasm yasm texinfo libxml2-utils git

RUN mkdir ffmpeg_build

WORKDIR /workspace

# nvenc #
RUN apt install -y git

RUN git clone https://github.com/FFmpeg/nv-codec-headers \
  && cd nv-codec-headers \
  && make install \
  && cd /workspace


# -----DESKTOP-----

