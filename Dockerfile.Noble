# libalsa-ocaml-dev for NOT --disable-alsa
# libsdl2-dev for NOT --disable-sdl2
# libva-dev for NOT --disable-vaapi
# llibvdpau-dev for NOT --disable-vdpau
# libx11-dev for NOT --disable-xlib
